<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uadnd.cou8901.bakersresourceapp.ui.RecipeStepDetailActivity">

    <ImageView
        android:id="@+id/iv_step_video_thumbnail"
        android:layout_width="46dp"
        android:layout_height="42dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="111dp"
        app:layout_constraintTop_toBottomOf="@+id/sepv_step_video"
        tools:layout_editor_absoluteY="243dp"
        tools:layout_editor_absoluteX="166dp" />
    <TextView
        android:id="@+id/tv_step_text"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="346dp"
        android:layout_height="191dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_blue_bright"
        android:ems="10"
        android:text="@string/step_description"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_step_video_thumbnail" />

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/sepv_step_video"
        android:layout_width="348dp"
        android:layout_height="141dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        tools:layout_editor_absoluteX="15dp" />

</android.support.constraint.ConstraintLayout>
